generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String       @unique
  password    String
  role        Role
  isActive    Boolean
  createdAt   DateTime
  cartlines   Cartline[]
  userratings Userrating[]

  @@map("user")
}

model Cartline {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  quantity  Int
  createdAt DateTime
  poster    Poster   @relation(fields: [posterId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([posterId], map: "cartlines_posterId_fkey")
  @@index([userId], map: "cartlines_userId_fkey")
  @@map("cartlines")
}

model Poster {
  id              Int              @id @default(autoincrement())
  name            String
  slug            String
  description     String
  image           String
  width           Int
  height          Int
  price           Float
  stock           Int
  createdAt       DateTime
  updatedAt       DateTime
  cartlines       Cartline[]
  genrePosterRels GenrePosterRel[]
  userratings     Userrating[]

  @@map("posters")
}

model Userrating {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  numStars  Int
  createdAt DateTime
  poster    Poster   @relation(fields: [posterId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([posterId], map: "userratings_posterId_fkey")
  @@index([userId], map: "userratings_userId_fkey")
  @@map("userratings")
}

model Genre {
  id              Int              @id @default(autoincrement())
  title           String
  slug            String
  createdAt       DateTime
  updatedAt       DateTime
  genrePosterRels GenrePosterRel[]

  @@map("genres")
}

model GenrePosterRel {
  posterId Int
  genreId  Int
  genre    Genre  @relation(fields: [genreId], references: [id])
  poster   Poster @relation(fields: [posterId], references: [id])

  @@id([posterId, genreId])
  @@index([genreId], map: "genreposterrels_genreId_fkey")
  @@map("genreposterrels")
}

enum Role {
  USER
  ADMIN
}
